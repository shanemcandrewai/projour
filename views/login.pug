doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Login
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css",
      rel="stylesheet",
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3",
      crossorigin="anonymous"
    )
    link(href="/stylesheets/login.css", rel="stylesheet")
    script(src='/javascripts/login.js' defer='')
  body.text-center
    main.form-login
      form
        a(href="/") 
          img.mb-4(src="/images/eye-clipart.svg", alt="ProJour home")
        h1.h3.mb-3.fw-normal Please log in
        .form-floating
          input#floatingUrl.form-control(
            name="url",
            type="url",
            value="redis://redis-11092.c250.eu-central-1-1.ec2.cloud.redislabs.com:11092"
          )
          label(for="floatingRedis") Data
        .form-floating
          input#floatingUser.form-control(name="user", type="text")
          label(for="floatingUser") User
        .form-floating
          input#floatingPassword.form-control(name="password", type="password")
          label(for="floatingPassword") Password
        button#login.w-100.btn.btn-lg.btn-primary(
          type="submit",
          formaction="/login",
          formmethod="post"
        )
          | Log in
    p
    p#from
    p#message
